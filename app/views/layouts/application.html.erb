<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : 'Jacqueline Ann Holloway'%></title>
  <%= stylesheet_link_tag    :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
  <%= render partial: 'site_configuration/styles' %>
  <%= render partial: 'resume/templates' %>
</head>
<body class="<%= content_for?(:body_class) ? yield(:body_class) : 'no-overflow' %>"> 
  <%= (content_tag :div, flash[:notice], class: 'flash-notice', style: "display: #{flash[:notice] ? 'block' : 'none'}") %>
  <%= (content_tag :div, flash[:error], class: 'flash-error', style: "display: #{flash[:error] ? 'block' : 'none'}") %>
  <%=  content_for?(:content) ? yield(:content) : yield %>
</body>
</html>
